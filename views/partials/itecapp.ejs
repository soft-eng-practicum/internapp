      </tr>
      <tr>
         <td>Proposed Internship Date</td>
         <td>
            <%= application.proposedinternsemester  + ' ' + application.proposedinternyear %>
         </td>
      </tr>
      <tr>
         <td>Major</td>
         <td>
            <%= application.major %>
         </td>
      </tr>
      <tr>
         <td>Classification</td>
         <td>
            <%= application.classification %>
         </td>
      </tr>
      <tr>
         <td>GPA</td>
         <td>
            <%= application.gpa %>
         </td>
      </tr>
      <tr>
         <td>ITEC GPA</td>
         <td>
            <%= application.itecgpa %>
         </td>
      </tr>
      <tr>
         <td>ITEC 2150</td>
         <td>
            <%= application.itec2150 + ' ' + application.itec2150Year %>
         </td>
      </tr>
      <tr>
         <td>ITEC 3100</td>
         <td>
            <%= application.itec3100 + ' ' + application.itec3100Year %>
         </td>
      </tr>
      <tr>
         <td>ITEC 3200</td>
         <td>
            <%= application.itec3200 + ' ' + application.itec3200Year %>
         </td>
      </tr>
      <tr>
         <td>ITEC 3900</td>
         <td>
            <%= application.itec3900 + ' ' + application.itec3900Year %>
         </td>
      </tr>
       <tr>
         <td>Mentor Name</td>
         <td>
            <%= application.mentorname %>
         </td>
      </tr>
      <tr>
         <td>Interests and Strengths</td>
         <td>
            <%= application.interestsandstrengths %>
         </td>
      </tr>
      <tr>
         <td>Type of Internship</td>
         <td>
            <%= application.typeofinternship %>
         </td>
      </tr>
      <tr>
         <td>Interested in Software Dev. or Programming?</td>
         <td>
            <%= application.focusonsoftdev %>
         </td>
      </tr>
      <tr>
         <td>Have Proposed Internship?</td>
         <td>
            <%= application.haveproposedintern %>
         </td>
      </tr>
