         </td>
      </tr>
       <tr>
           <td>Applicant Email</td>
           <td>
               <%= application.useremail %>
           </td>
       </tr>
      <tr>
            <td>Applicant Phone Number</td>
            <td>
               <%= user.local.phone %>
            </td>
         </tr>
      <tr>
         <td>Applicant Student ID</td>
         <td>
            <%= application.userstudentid %>
         </td>
      </tr>
      <tr>
         <td>Applicant Discipline</td>
         <td>
            <%= application.userdiscipline %>
         </td>
      </tr>
      <tr>
         <td>Expected Graduation Date</td>
         <td>
            <%= application.expectedGraduationSemester + ' ' + application.expectedGraduationYear %>
