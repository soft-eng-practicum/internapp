   </table>

   <h3>Student Feedback</h3>
   <table class="table table-bordered">
      <thead>
         <tr>
            <th>Note</th>
            <th>Entered By</th>
            <th>Date</th>
            <% if (user.role=='admin') { %>
            <th>Delete</th>
            <% } %>
         </tr>
      </thead>
      <tbody>
         <% application.feedback.forEach(function(feedback) { %>
         <tr>
            <td><%= feedback.feedback %></td>
            <td><%= feedback.user %></td>
            <td><%= feedback.prettyFeedbackDate %></td>
            <% if (user.role=='admin') { %>
            <td><a href="/application/bio/<%= application._id %>/feedback/delete/<%= feedback._id %>"><span class='glyphicon glyphicon-trash'></span></a></td>
            <% } %>
         </tr>
         <% }) %>
      </tbody>
   </table>
   <% if (user.role=='admin') { %>
   <form name="bioappfeedback" action="/application/bio/feedback/<%= application._id %>" method="post">
      <div class="form-group">
         <br>
         <textarea rows="4" cols="50" name="feedback" placeholder="These comments are from faculty addressing students directly."></textarea>
      </div>
      <button type="submit" class="btn btn-success btn-lg">Add Feedback</button>
   </form>
   <% } %>
</div>
<% if (user.role=='admin') { %>
<div class="col-sm-6 col-sm-offset-3">
   <h3>Change Application Status</h3>
   <form name="applicationstatus" method="post">
      <div class="form-group">
         <label>Application Status</label>
         <select class="form-control" name="applicationstatus">
            <option value="" >Select a status</option>
            <option value="approved" >Approved</option>
            <option value="denied">Denied</option>
            <option value="incomplete">Incomplete</option>
            <option value="further review">Further Review</option>
            <option value="applicant rescinded" >Applicant Rescinded</option>
            <option value="applicant postponed">Applicant Postponed</option>
            <option value="site declined">Site Declined</option>
         </select>
      </div>
      <button type="submit" class="btn btn-success btn-lg">Change Status</button>
   </form>
</div>
<% } %>
<% if (user.role=='admin' || user.role=='instructor') { %>
<div class="col-sm-6 col-sm-offset-3">
   <h3>Admin and Instructor Notes</h3>
   <table class="table table-bordered">
      <thead>
         <tr>
            <th>Note</th>
            <th>Entered By</th>
            <th>Date</th>
            <th>Delete</th>
         </tr>
      </thead>
      <tbody>
         <% application.notes.forEach(function(note) { %>
         <tr>
            <td><%= note.note %></td>
            <td><%= note.user %></td>
            <td><%= note.prettyNotesDate %></td>
            <td><a href="/application/bio/<%= application._id %>/notes/delete/<%= note._id %>"><span class='glyphicon glyphicon-trash'></span></a></td>
         </tr>
         <% }) %>
      </tbody>
   </table>
   <hr>
</div>
<div class="col-sm-6 col-sm-offset-3">
   <form name="bioappadminnotes" action="/application/bio/notes/<%= application._id %>" method="post">
      <div class="form-group">
         <h3>Add Note</h3>
         <br>
         <textarea rows="4" cols="50" name="note" placeholder="These comments are from faculty addressing other faculty."></textarea>
      </div>
      <button type="submit" class="btn btn-success btn-lg">Add Note</button>
   </form>
   <h3>Document Uploads table</h3>
   <hr>
</div>
<% } else { %>

<% } %>

<% if (documents.length > 0) { %>
<div class="col-6 col-md-auto">
   <table class="table table-hover">
      <thead>
      <tr>
         <th>Document Status</th>
         <th>Name</th>
         <th>Program</th>
         <th>File Type</th>
         <th>Date Submitted</th>
         <th>View Document Details</th>
         <th>Download Document</th>
         <th>Delete Document</th>
      </tr>
      </thead>
      <tbody>
      <% documents.forEach(function(document) { %>
         <tr>
            <td><%= document.documentStatus %></td>
            <td><%= document.documentName %></td>
            <td><%= document.fileSection %></td>
            <td><%= document.fileType %></td>
            <td><%= document.prettyUploadDate %></td>
            <td><a href="/document/<%= document._id%>"><span class='glyphicon glyphicon-search'></span></a></td>
            <td><a href="/getFiles/<%= document.fileId%>/<%= document.documentName%>"><span class='glyphicon glyphicon-download'></span></a></td>
            <td><a href="/document/<%= document._id%>/delete"><span class='glyphicon glyphicon-trash'></span></a></td>

         </tr>
      <% }); } %>
      </tbody>
   </table>
</div>
