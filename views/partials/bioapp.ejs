      <tr>
         <td>Proposed Site Name</td>
         <td>
            <%= application.proposedsitename %>
         </td>
      </tr>
      <tr>
         <td>Proposed Site Speciality</td>
         <td>
            <%= application.proposedsitespecialty %>
         </td>
      </tr>
      <tr>
         <td>Proposed Site Address</td>
         <td>
            <%= application.proposedsiteaddress %>
         </td>
      </tr>
      <tr>
         <td>Proposed Organization City</td>
         <td>
            <%= application.proposedsitecity %>
         </td>
      </tr>
      <tr>
         <td>Proposed Organization State</td>
         <td>
            <%= application.proposedsitestate %>
         </td>
