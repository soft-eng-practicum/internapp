<script>
   $('.employed').hide();
   $(function(){
       $('#isStudentEmployedList').change(function(){
          var opt = $(this).val();
           if(opt == 'Yes'){
               $('.employed').show();
           }else{
           	$('.employed').hide();
           }
       });
    });

   $('.other').hide();
   $(function(){
       $('#additionalInfoList').change(function(){
          var opt = $(this).val();
           if(opt == 'Other'){
               $('.other').show();
           }else{
           	$('.other').hide();
           }
       });
   });

   $(function () {
        $("#submitBtn").click(function () {
            var signature = $("#signatureTxt").val();
            var name = $("#printedTxt").val();
            if (signature != name) {
                alert("Please Make Sure Your Name and Signature Match");
                return false;
            }
            return true;
        });
    });

    $('#successEssay').hide();
    $('#successTranscript').hide();
    $('#successOther').hide();
    $('#failUpload').hide();

    document.getElementById('uploadBtn').addEventListener("click", function() {
        document.querySelector('.bg-modal').style.display = "flex";
    });

    document.querySelector('.close').addEventListener("click", function () {
        document.querySelector('.bg-modal').style.display = "none";
    });

    window.onclick = function(event) {
    if (event.target == document.querySelector('.bg-modal')) {
        document.querySelector('.bg-modal').style.display = "none";
        }
    }
        $('#essayFile').change(
            function(){
                if ($(this).val()) {
                    $('#btnSubmitEssay').attr('disabled',false);
                }
            });
        $('#transcriptFile').change(
        function(){
            if ($(this).val()) {
                $('#btnSubmitTranscript').attr('disabled',false);
            }
        });

    $('#bioOtherName, #otherBioFile').on('change', function() {
        if ($.trim($('#bioOtherName').val()) != '' && $('#otherBioFile').val()) {
            $('#btnSubmitOther').attr('disabled', false);
    }
    });

    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

        $("#btnSubmitEssay").click(function (event) {

            $('#btnSubmitEssay').attr('disabled', true);

            event.preventDefault();

            var form = $('#uploadEssay')[0];
            var data = new FormData(form);
            console.log(data);

            $.ajax({
                type: "POST",
                //contentType: 'multipart/form-data',
                url: "/uploadBioEssay",
                data: data,
                processData: false,
                contentType: false,
                cache: false,
                timeout: 29000, // Heroku timeout is 30s, so fail properly before that
                success: function (data) {
                    $('#btnSubmitEssay').hide(), $('#successEssay').show(), $('#submitBtn').attr('disabled',false);
                },
              error: function (e) {
                console.log('error ajax post for upload essay');
                console.log(e);
                $('#failUpload').show();
              }
            });
           });

        $("#btnSubmitTranscript").click(function (event) {

            $('#btnSubmitTranscript').attr('disabled', true);

            event.preventDefault();

            var form = $('#uploadTranscript')[0];
            var data = new FormData(form);

            $.ajax({
                type: "POST",
                enctype: 'multipart/form-data',
                url: "/uploadBioTranscript",
                data: data,
                processData: false,
                contentType: false,
                cache: false,
                success: function (data) {
                    $('#btnSubmitTranscript').hide(), $('#successTranscript').show(), $('#submitBtn').attr('disabled',false);
                },
                error: function (e) {
                    $('#failUpload').show();
                }
            });

        });

        $("#btnSubmitOther").click(function (event) {

            $('#btnSubmitOther').attr('disabled', true);

            event.preventDefault();

            var form = $('#uploadOther')[0];
            var data = new FormData(form);

            $("#btnSubmitOther").prop("disabled", false);

            $.ajax({
                type: "POST",
                enctype: 'multipart/form-data',
                url: "/uploadBioOther",
                data: data,
                processData: false,
                contentType: false,
                cache: false,
                success: function (data) {
                    $('#btnSubmitOther').hide(), $('#successOther').show();
                },
                error: function (e) {
                    $('#failUpload').show();
                }
            });

        });

    });


</script>
